{
    "app-id": "org.darktable.Darktable",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "command": "darktable",
    "rename-desktop-file": "darktable.desktop",
    "rename-appdata-file": "darktable.appdata.xml",
    "rename-icon": "darktable",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--filesystem=host",
        "--talk-name=org.freedesktop.secrets",
        /* Needed for dconf to work */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        /* Needed for gvfs to work */
        "--talk-name=org.gtk.vfs", "--talk-name=org.gtk.vfs.*"
    ],
    "build-options": {
        "cflags": "-O2",
        "cxxflags": "-O2 -std=c++11",
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/include",
        "/bin/exiv2*",
        "/bin/*lensfun*",
        "/bin/metacopy",
        "/bin/pathtest",
        "/bin/gphoto2*",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "lensfun",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DBUILD_FOR_SSE=0",
                "-DBUILD_FOR_SSE2=0"
            ],
            "build-options": {
                "arch": {
                    "i386": {
                        "config-opts": [
                            "-DBUILD_FOR_SSE=1",
                            "-DBUILD_FOR_SSE2=1"
                        ]
                    },
                    "x86_64": {
                        "config-opts": [
                            "-DBUILD_FOR_SSE=1",
                            "-DBUILD_FOR_SSE2=1"
                        ]
                    }
                }
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://git.code.sf.net/p/lensfun/code",
                    "commit": "a78b3d29762ee644bbbbb6eae9daf0b98cf84472"
                }
            ]
        },
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DCMAKE_BUILD_TYPE=Release"],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.exiv2.org/builds/exiv2-0.26-trunk.tar.gz",
                    "sha256": "c75e3c4a0811bf700d92c82319373b7a825a2331c12b8b37d41eb58e4f18eafb"
                }
            ]
        },
        {
            "name": "pugixml",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "cflags": "-fPIC",
                "cxxflags": "-fPIC"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/zeux/pugixml/releases/download/v1.9/pugixml-1.9.tar.gz",
                    "sha256": "d156d35b83f680e40fd6412c4455fdd03544339779134617b9b28d19e11fdba6"
                }
            ]
        },
        {
            "name": "colord",
            "config-opts": [
                "--disable-gusb",
                "--disable-udev",
                "--disable-polkit",
                "--disable-systemd-login",
                "--disable-argyllcms-sensor",
                "--disable-bash-completion"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.freedesktop.org/software/colord/releases/colord-1.3.5.tar.xz",
                    "sha256": "2daa8ffd2a532d7094927cd1a4af595b8310cea66f7707edcf6ab743460feed2"
                }
            ]
        },
        {
            "name": "colord-gtk",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.freedesktop.org/software/colord/releases/colord-gtk-0.1.26.tar.xz",
                    "sha256": "28d00b7f157ea3e2ea5315387b2660fde82faba16674861c50465e55d61a3e45"
                }
            ]
        },
        {
            "name": "libgphoto2",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/gphoto/libgphoto/2.5.19/libgphoto2-2.5.19.tar.bz2",
                    "sha256": "62523e52e3b8542301e072635b518387f2bd0948347775cf10cb2da9a6612c63"
                }
            ]
        },
        {
            "name": "darktable",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DBINARY_PACKAGE_BUILD=1"
            ],
            "builddir": true,
            "build-options": {
                "cflags": "-O2 -std=c99"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/darktable-org/darktable/releases/download/release-2.4.4/darktable-2.4.4.tar.xz",
                    "sha256": "964320b8c9ffef680fa0407a6ca16ed5136ad1f449572876e262764e78acb04d"
                }
            ]
        }
    ]
}
